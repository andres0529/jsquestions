<div class="container" id="cards">
  <div class="row justify-content-center align-items-center h-25">
    <div class="jumbotron text-center">
      <h1 class="display-4">{{user.fullName}}</h1>
      <hr class="my-2" />
      <p class="lead">Last Login: {{user.lastLoggin}}</p>
      <p>Score: {{user.score}}</p>
    </div>
    <div>
      <h5>Questions answered correctly âœ…</h5>
      <div class="container d-flex justify-content-evenly align-items-center flex-wrap">
        {{#each rightquestions}}
          <div class="card">
            <div>
              <p>{{question}}</p>
            </div>
            <div>
                <span>Score: {{score}}</span>
            </div>
          </div>
        {{/each}}
    </div>
  </div>
</div>
<div class="toolbar">
  <div class="container">
    <form method="post">
      <input type="submit" value="Delete my account" />
    </form>
  </div>
</div>